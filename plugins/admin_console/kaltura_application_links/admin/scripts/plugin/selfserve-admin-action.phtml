<div>
<iframe id="LoginIframe" width="0" height="0" src="about:blank"></iframe>
<iframe id="ApplicationIframe" width="100%" height="100%" src="about:blank" frameborder="0" class="auto-height"></iframe>
</div>
<script type="text/javascript">
    var initialized = false;
    (function(window) {
        if (initialized) {
            return;
        }
        initialized = true;
        var loginIframe = window.document.getElementById('LoginIframe');
        loginIframe.addEventListener("load", function() {
            window.document.getElementById('ApplicationIframe').src = '<?php echo $this->appUrl; ?>';
        });
        loginIframe.src = '<?php echo $this->loginUrl; ?>';
    })(window);
</script>
